<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sam="clr-namespace:DataGridSam;assembly=DataGridSam"
             xmlns:models="clr-namespace:Sample.Models"
             xmlns:vm="clr-namespace:Sample.ViewModels"
             x:Class="Sample.Views.SamplePage"
             x:DataType="vm:SampleVm"
             BackgroundColor="{AppThemeBinding Light=#FFF, Dark=#333, Default=#fff}">
    <sam:DataGrid ItemsSource="{Binding Items}"
                  RowSelectedCommand="{Binding CommandSelectedRow}"
                  RowLongSelectedCommand="{Binding CommandLongSelectedRow}"
                  BordersColor="#888"
                  BordersThickness="1"
                  Margin="10"
                  HeaderFontSize="16"
                  HeaderHorizontalAlignment="Center"
                  HeaderTextColor="#999"
                  HeaderBackgroundColor="Black"
                  CellTextColor="#777"
                  CellBackgroundColor="#CCC">
        <sam:DataGridColumn Title="First name"
                            PropertyName="FirstName"/>

        <sam:DataGridColumn Title="Last name"
                            PropertyName="LastName"/>

        <sam:DataGridColumn Title="Birth date"
                            Width="100"
                            PropertyName="BirthDate"
                            StringFormat="{}{0:dd.MM.yyyy}"
                            CellHorizontalTextAlignment="End">
            <!--<sam:DataGridColumn.CellTriggers>
                <DataTrigger TargetType="sam:Cell"
                             Binding="{Binding IsOldFag}"
                             Value="True">
                    <Setter Property="TextColor" Value="Yellow"/>
                    <Setter Property="FontAttributes" Value="Bold"/>
                    <Setter Property="HeightRequest" Value="50"/>
                </DataTrigger>
            </sam:DataGridColumn.CellTriggers>-->
        </sam:DataGridColumn>

        <!--row triggers-->
        <sam:DataGrid.RowTriggers>
            <sam:RowTrigger Binding="{Binding IsAdmin}"
                            Value="True"
                            BackgroundColor="#833"
                            TextColor="White"
                            FontSize="18"/>

            <sam:RowTrigger Binding="{Binding IsManager}"
                            Value="True"
                            BackgroundColor="#225"
                            TextColor="White"/>
        </sam:DataGrid.RowTriggers>
    </sam:DataGrid>
</ContentPage>