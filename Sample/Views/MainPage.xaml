<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sample.Views.MainPage"
             Title="MainPage"
             Padding="10">
    <ScrollView>
        <VerticalStackLayout Spacing="10">
            <Button Clicked="Button_Clicked"
                    Text="Sample" />

            <Button Clicked="Button_Clicked_1"
                    Text="Default MAUI Collection (for compare)" />

            <Button Clicked="Button_Clicked_2"
                    Text="Triggers" />

            <Button Clicked="Button_Clicked_3"
                    Text="Colorized columns" />

            <Button Clicked="Button_Clicked_4"
                    Text="Colorized columns and triggers" />

            <Button Clicked="Button_Clicked_6"
                    Text="Custom cells" />

            <Button Clicked="Button_Clicked_5"
                    Text="Dynamic items" />

            <Button Clicked="Button_Clicked_7"
                    Text="Dynamic columns" />

            <Button Clicked="Button_Clicked_8"
                    Text="Small items DataGrid" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>