<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sample.Views.MainPage"
             Title="MainPage"
             Padding="10">
    <VerticalStackLayout Spacing="10">
        <Button Text="Sample"
                Clicked="Button_Clicked"/>

        <Button Text="Default MAUI Collection (for compare)"
                Clicked="Button_Clicked_1"/>

        <Button Text="Triggers"
                Clicked="Button_Clicked_2"/>

        <Button Text="Colorized columns"
                Clicked="Button_Clicked_3"/>

        <Button Text="Colorized columns and triggers"
                Clicked="Button_Clicked_4"/>

        <Button Text="Dynamic items"
                Clicked="Button_Clicked_5"/>

        <Button Text="Custom cells"
                Clicked="Button_Clicked_6"/>
    </VerticalStackLayout>
</ContentPage>